        data.put("total_1", "400,000");
        data.put("book_2", "Python Programming");
        data.put("price_2", "250,000");
        data.put("qty_2", "1");
        data.put("total_2", "250,000");
        // Continue adding data for the other books...
        
        data.put("grand_total", "10,000,000");
        
        // Tạo một đối tượng ReceiptExporter và gọi phương thức generateInvoice để tạo hóa đơn
