public class Test {
    public static void main(String[] args) {
        // Đường dẫn tới mẫu hóa đơn Word
        String templatePath = "C:\\Users\\KHANH\\OneDrive\\Documents\\template.docx";
        // Đường dẫn tới file đầu ra
        String outputPath = "C:\\Users\\KHANH\\OneDrive\\Documents\\invoice.docx";
        
        // Dữ liệu thay thế cho template
        Map<String, String> data = new HashMap<>();
        data.put("sale_date", "12/02/2025");
