package vn.DA_KNNN.Components;

import java.awt.Color;

import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class SearchHelper extends JPanel{
	private JTextField txtSearch;
	private JButton btnSearch;
	private JButton btnRefresh;
	
	public JTextField getTxtSearch() {
		return txtSearch;
	}
	public JButton getBtnSearch() {
		return btnSearch;
	}
	public JButton getBtnRefresh() {
		return btnRefresh;
	}
	public SearchHelper() {
		this.txtSearch = new JTextField();
		this.btnSearch = new ButtonHelper("Tìm kiếm",AppHelper.setSizeImage("/images/search.png",30,30),new Color(33, 150, 243));
		this.btnRefresh = new ButtonHelper("",AppHelper.setSizeImage("/images/refresh.png",30,30),new Color(255,255, 255));
	}		
}
