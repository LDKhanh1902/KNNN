        bookPanel.setBorder(BorderFactory.createLineBorder(Color.BLACK, 1));
        bookPanel.add(bookLabel);
        bookPanel.add(bookCountValue);
        infoPanel.add(bookPanel);

        // **Staff Count Panel**
        JPanel staffPanel = new JPanel(new GridLayout(2, 1));
