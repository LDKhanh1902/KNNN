        customerCountValue = new JLabel("250", SwingConstants.CENTER);
        customerPanel.setBorder(BorderFactory.createLineBorder(Color.BLACK, 1));
        customerPanel.add(customerLabel);
        customerPanel.add(customerCountValue);
        infoPanel.add(customerPanel);

        // **Revenue Panel**
        JPanel revenuePanel = new JPanel(new GridLayout(2, 1));
        JLabel revenueLabel = new JLabel("üí∞ T·ªïng doanh thu", SwingConstants.CENTER);
        revenueValue = new JLabel("5.000.000 VNƒê", SwingConstants.CENTER);
