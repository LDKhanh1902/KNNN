package vn.DA_KNNN.View;

import javax.swing.*;

public class Test {
    public static void main(String[] args) {
        // Tạo JFrame chính
        JFrame frame = new JFrame("Main Frame");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 300);
        frame.setLocationRelativeTo(null);
        
        // Tạo một nút để mở JDialog
        JButton btnOpenDialog = new JButton("Open Dialog");
        btnOpenDialog.addActionListener(e -> {
            // Tạo và hiển thị JDialog khi nút được nhấn
            JDialog dialog = new JDialog(frame, "Sample Dialog", true); // true -> Modal Dialog
            dialog.setSize(300, 200);
            dialog.setLocationRelativeTo(frame);
            dialog.setLayout(new BoxLayout(dialog.getContentPane(), BoxLayout.Y_AXIS));

            // Thêm một số thành phần vào trong JDialog
            dialog.add(new JLabel("This is a sample dialog."));
            JButton btnCloseDialog = new JButton("Close");
            btnCloseDialog.addActionListener(ev -> dialog.dispose());
            dialog.add(btnCloseDialog);
            
            // Hiển thị dialog
            dialog.setVisible(true);
        });
        
        frame.add(btnOpenDialog);
        frame.setVisible(true);
    }
}
