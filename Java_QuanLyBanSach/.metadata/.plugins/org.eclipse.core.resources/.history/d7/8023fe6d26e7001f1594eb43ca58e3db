        customerCountLabel.setBorder(BorderFactory.createLineBorder(Color.BLACK, 1));
        revenueLabel.setBorder(BorderFactory.createLineBorder(Color.BLACK, 1));
        
        bookCountLabel.setOpaque(true);
        staffCountLabel.setOpaque(true);
        customerCountLabel.setOpaque(true);
        revenueLabel.setOpaque(true);
        
        bookCountLabel.setBackground(Color.WHITE);
        staffCountLabel.setBackground(Color.WHITE);
        customerCountLabel.setBackground(Color.WHITE);
        revenueLabel.setBackground(Color.WHITE);
        
        bookCountLabel.setFont(new Font("Tahoma", Font.PLAIN, 14));
        staffCountLabel.setFont(new Font("Tahoma", Font.PLAIN, 14));
        customerCountLabel.setFont(new Font("Tahoma", Font.PLAIN, 14));
        revenueLabel.setFont(new Font("Tahoma", Font.PLAIN, 14));
        
        infoPanel.add(bookCountLabel);
        infoPanel.add(staffCountLabel);
        infoPanel.add(customerCountLabel);
        infoPanel.add(revenueLabel);
        
        mainContent.add(infoPanel, BorderLayout.NORTH);

        // **Chart Panel**
        JPanel chartPanel = new JPanel();
        chartPanel.setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
        chartPanel.setLayout(new BoxLayout(chartPanel, BoxLayout.X_AXIS));
        
        pieChart = new PieChart();
        columnChart = new ColumnChart();
        chartPanel.add(pieChart);
        chartPanel.add(columnChart);
        
        mainContent.add(chartPanel, BorderLayout.CENTER);

        // **Footer**
        JPanel footerPanel = createFooter();
