package vn.DA_KNNN.View;

import javax.swing.*;
import vn.DA_KNNN.Components.ColumnChart;
import vn.DA_KNNN.Components.LineChart;
import vn.DA_KNNN.Components.PieChart;
import java.awt.*;

public class RevenueView extends JPanel {
    private static final long serialVersionUID = 1L;
    private JTextField textField;

    /**
     * Create the panel.
     */
    public RevenueView() {
        setLayout(new BorderLayout(10, 10)); // Dùng BorderLayout để sắp xếp gọn hơn

        // **1️⃣ Grid Panel chính gồm 3 hàng 2 cột**
        JPanel gridPanel = new JPanel(new GridLayout(2, 2, 10, 10));
        add(gridPanel, BorderLayout.CENTER);

        // **2️⃣ Panel chứa ComboBox + PieChart**
        JPanel panel = new JPanel();
        panel.setLayout(new FlowLayout(FlowLayout.CENTER, 5, 5));
        JComboBox<String> comboBox = new JComboBox<>(new String[]{"Tùy chọn 1", "Tùy chọn 2"});
        panel.add(comboBox);
        PieChart pie = new PieChart();
        panel.add(pie);
        gridPanel.add(panel);

        // **3️⃣ Biểu đồ cột**
        ColumnChart column = new ColumnChart();
        gridPanel.add(column);

        // **4️⃣ Biểu đồ đường**
        LineChart line = new LineChart();
        gridPanel.add(line);

        // **5️⃣ Bảng doanh thu**
        JTable table = new JTable(new Object[][]{{1, 2}}, new String[]{"Tháng 1", "Tháng 2"});
        gridPanel.add(new JScrollPane(table));

        // **6️⃣ Panel chứa các nút chức năng trải rộng hàng cuối**
        JPanel buttonPanel = new JPanel(new GridLayout(1, 3, 10, 10));
        JButton btn1 = new JButton("Thống kê");
        JButton btn2 = new JButton("Xuất PDF");
        JButton btn3 = new JButton("Thoát");

        buttonPanel.add(btn1);
        buttonPanel.add(btn2);
        buttonPanel.add(btn3);

        // **7️⃣ Panel chứa buttonPanel để nó trải ngang cả 2 cột**
        JPanel bottomPanel = new JPanel(new BorderLayout());
        bottomPanel.add(buttonPanel, BorderLayout.CENTER);

        // **8️⃣ TextField dưới các nút**
        textField = new JTextField();
        textField.setColumns(10);
        bottomPanel.add(textField, BorderLayout.SOUTH);

        // **9️⃣ Đặt bottomPanel vào BorderLayout.SOUTH để nó trải ngang**
        add(bottomPanel, BorderLayout.SOUTH);
    }
    
}
