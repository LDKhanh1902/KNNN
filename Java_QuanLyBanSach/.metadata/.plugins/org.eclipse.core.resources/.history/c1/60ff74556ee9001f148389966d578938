package vn.DA_KNNN.View;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.time.LocalDate;

public class Test {
    public static void main(String[] args) {
        // Tạo JFrame
        JFrame frame = new JFrame("ComboBox Example");
        frame.setSize(400, 200);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        // Tạo JComboBox với các mục lựa chọn
        String[] items = {"Option 1", "Option 2", "Option 3", "Option 4"};
        JComboBox<String> comboBox = new JComboBox<>(items);
        
        // Thêm ActionListener vào JComboBox
        comboBox.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                // Lấy chỉ số đã chọn
                int selectedIndex = comboBox.getSelectedIndex();
                // Thực hiện hành động tùy theo chỉ số đã chọn
                System.out.println(String.valueOf(LocalDate.now().getMonthValue()));
                System.out.println("Selected item: " + comboBox.getSelectedIndex());
            }
        });

        // Thêm ComboBox vào JFrame
        frame.add(comboBox);
        frame.setVisible(true);
    }
}
