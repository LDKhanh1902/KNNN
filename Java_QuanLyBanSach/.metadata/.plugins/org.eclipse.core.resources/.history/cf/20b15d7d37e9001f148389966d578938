package vn.DA_KNNN.View;

import javax.swing.*;
import java.awt.*;

public class Test {
    public static void main(String[] args) {
        // Tạo một JFrame mới
        JFrame f = new JFrame();
        f.setSize(500, 400);

        // Tải hình ảnh và thay đổi kích thước
        

        // Tạo một JButton với văn bản và biểu tượng (ImageIcon)
        JButton l = new JButton("book", setSizeImage("/images/book.png"));
        l.setFont(new Font("Tahoma",Font.PLAIN,40));
        // Thêm JButton vào JFrame
        f.add(l);
        
        // Đóng chương trình khi cửa sổ đóng
        f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        // Hiển thị JFrame
        f.setVisible(true);
    }
    
    private static ImageIcon setSizeImage(String url) {
    	ImageIcon icon = new ImageIcon(Test.class.getResource(url));
        Image img = icon.getImage(); // Lấy đối tượng Image từ ImageIcon
        Image scaledImg = img.getScaledInstance(100, 100, Image.SCALE_SMOOTH); // Thay đổi kích thước
        ImageIcon scaledIcon = new ImageIcon(scaledImg); // Tạo ImageIcon từ hình đã thay đổi kích thước
        return scaledIcon;
    }
}
